<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/btn_google"
            android:textSize="30sp"
            android:textColor="@color/color_white"
            android:background="@color/btn_google"
            android:id="@+id/btn_google"
            android:onClick="google"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/btn_call"
            android:textSize="30sp"
            android:textColor="@color/color_white"
            android:background="@color/btn_call"
            android:id="@+id/btn_call"
            android:onClick="call"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/btn_loc"
            android:textSize="30sp"
            android:textColor="@color/color_white"
            android:background="@color/btn_loc"
            android:id="@+id/btn_loc"
            android:onClick="location"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/btn_share"
            android:textSize="30sp"
            android:textColor="@color/color_white"
            android:background="@color/btn_share"
            android:id="@+id/btn_send"
            android:onClick="send"
            />

    </LinearLayout>
</ScrollView>